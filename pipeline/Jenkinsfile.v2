pipeline {
    agent {
        docker {
            image 'maven:3.5.0' 
            args '-v /root/.m2:/root/.m2' 
        }
    }
    stages {
      stage('Preparation') {
         checkout scm
         sh "git rev-parse --short HEAD > .git/commit-id"
         commit_id = readFile('.git/commit-id').trim()
       }
        stage('Build') { 
            steps {
                sh 'mvn clean install' 
            }
        }
    }
}